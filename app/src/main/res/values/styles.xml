<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="text_title_style" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/color_222222</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="text_content_style" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/color_222222</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="text_normal_style" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/color_222222</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

</resources>
